@{ var returnUrl = @Context.Request.Query["returnurl"]; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#00a300">
    <meta name="theme-color" content="#ffffff">
    <title>@ViewData["Title"] - WisePoll</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <script> </script>
</head>
<body class="@ViewData["Class"]">
    <nav class="nav">
        <div class="nav-brand">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/media/WisePollLogo.svg" alt="WisePoll logo">
            </a>
        </div>
    </nav>
<main role="main">
    <div class="wisepuddle-group">
        <div class="wisepuddle wisepuddle-right"></div>
        <div class="wisepuddle wisepuddle-bottom-left"></div>
    </div>
    <div class="auth-form">
        <form class="form" asp-route-returnurl="@returnUrl" asp-action="@ViewData["asp-actionForm"]">
            @RenderBody()
            <div class="auth-form-submit">
                <input type="submit" class="btn btn-primary" value="@ViewData["SubmitValue"]">
                <a class="link link-icon link-icon-revert" asp-area="" asp-controller="Home" asp-action="Index">Back to home <i class="icon-ChevronRight"></i></a>
            </div>
        </form>
            
        @if (IsSectionDefined("RedirectButton")) { 
            @RenderSection("RedirectButton")
        }
        else { 
            <div class="register-now-link"><a class="link link-primary link-underline" asp-area="" asp-controller="Auth" asp-action="Register">No account ? Register now</a></div>
        }
    </div>
</main>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
