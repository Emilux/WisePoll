@{
    ViewData["hide-header"] = false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#00a300">
    <meta name="theme-color" content="#ffffff">
    <title>@ViewData["Title"] - WisePoll</title>
    <link rel="stylesheet" href="~/lib/tagify/css/tagify.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script> </script>
</head>
<body class="@ViewData["Class"]">
@{/* @todo check if user is logged and show loggedinnav */}
@if (User.Identity.IsAuthenticated){
        <partial name="_LoggedNav"/>
    } else
    {
        <partial name="_navigation"/>
    }


@if (IsSectionDefined("header"))
{
    @RenderSection("header")
}
else
{
    <partial name="_header"/>
}

<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>


<partial name="_footer"/>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/tagify/js/tagify.min.js"></script>
<script src="~/lib/tagify/js/tagify.polyfills.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/choices.js" asp-append-version="true"></script>
<script src="~/js/pollResult.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
