@{
    ViewData["Title"] = "Login Page";
    ViewData["Class"] = "auth";
    ViewData["SubmitValue"] = "Log In";
    Layout = "_Layout-Auth";
}

<div class="form-group">
    <label class="form-label" for="email">E-mail :</label>
    <input class="form-field" id="email" type="text" name="login" placeholder="login">
</div>

<div class="form-group">
    <div class="form-label">
        <label class="" for="password">Password :</label>
        <a class="link link-primary link-underline" href="#">Forgot password ?</a>
    </div>
    <input class="form-field" id="password" type="text" name="password" placeholder="password">
</div>


<div class="form-check">
    <input class="form-field" id="StayLog" type="checkbox" name="StayLog"/>
    <label class="form-label form-label-check" for="StayLog">Stay Logged In ?</label>
</div>
