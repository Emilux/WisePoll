@{
    ViewData["Title"] = "Login Page";
    Layout = "_Layout-Vide";
}

<div id="login" class="container">
    <div class="logo">
        <img src="~/media/WisePollLogo.svg"/>
    </div>

    <img class="img-decoration" src="~/media/WisePuddle.svg" />
    <img class="img-decoration" src="~/media/WisePuddle.svg" />

    <div class="wrapper">
        <div class="form">
            <form method="post">
                <div>
                    <label>E-mail :</label>
                    <input type="text" name="login" placeholder="login">
                </div>

                <div>
                    <div>
                        <label>Password :</label>
                    </div>
                    <input type="text" name="password" placeholder="password">
                </div>
                
                <div>
                    <label>Pseudo</label>
                    <input type="text" name="pseudo" placeholder="Pseudo">
                </div>

                <div class="row">
                    <input type="submit" class="btn btn-primary col-md-6" value="Create account">
                    <a  class="col-md-6" href="#">Back to home <img src="/media/ChevronRight.svg" /></a>
                </div>
            </form>

            <p class="text-center"><a href="#">Sign in</a></p>
        </div>
    </div>
</div>
